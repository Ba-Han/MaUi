             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MaUiApp_Learning.Views.FAQDetailPage"
             Title="FAQ"
             Shell.NavBarIsVisible="True">
    
    <VerticalStackLayout Padding="20" Spacing="20">

        <!-- Top Row: Back + FAQ -->
