        <StackLayout>
            <Label Text="{Binding SelectedFAQ.Question}"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="Black" />

            <Label FontSize="12"
                   TextColor="Gray">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="{Binding SelectedFAQ.Date, StringFormat='Date: {0:MM/dd/yyyy h:mm tt}'}" />
                        <Span Text="&#10;" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>

            <Label Text="{Binding SelectedFAQ.Answer}"
                   FontSize="14"
                   TextColor="Black"
                   LineBreakMode="WordWrap" />
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>