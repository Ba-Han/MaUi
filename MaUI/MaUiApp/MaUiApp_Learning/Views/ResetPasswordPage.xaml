<?xml version="1.0" encoding="utf-8" ?>    
    
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MaUiApp_Learning.Views.ResetPasswordPage"
             Title=""
             Shell.NavBarIsVisible="True">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Choose Language ▼"
             Order="Primary"
             Priority="0"
             Clicked="OnLanguageTapped" />
    </ContentPage.ToolbarItems>

    <VerticalStackLayout Padding="20" Spacing="20">

        <!-- Top Row: Back + Choose Language -->
        <!--<Grid ColumnDefinitions="Auto,*">
            <ContentView Grid.Column="0">
                <HorizontalStackLayout HorizontalOptions="Start">
                    <Image Source="back.png" HeightRequest="24" WidthRequest="24"/>
                </HorizontalStackLayout>

                <ContentView.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnBackClicked"/>
                </ContentView.GestureRecognizers>
            </ContentView>

            <Label Text="Choose Language ▼"
               FontSize="14"
               HorizontalOptions="End"
               VerticalOptions="Center"
               TextColor="DarkBlue"
               Grid.Column="1">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnLanguageTapped"/>
                </Label.GestureRecognizers>
            </Label>
        </Grid>-->

        <!-- Logo -->
        <Image Source="logo_on_login.png"
           HeightRequest="100"
           WidthRequest="100"
           HorizontalOptions="Center" 
           Margin="0,40"/>

        <!-- Reset Password Title -->
        <Label Text="Reset your password"
           FontSize="22"
           FontAttributes="Bold"
           HorizontalOptions="Start"
           TextColor="Gray"/>

        <!-- Reset Password body text -->
        <Label Text="Insert your email below and you will receive an email where you can recover your password."
           FontSize="14"
           FontAttributes="Bold"
           HorizontalOptions="Start"
           TextColor="Gray"/>

        <!-- Email -->
        <Entry Placeholder="Email"
           Text="{Binding Email}"
           Keyboard="Email"
           Margin="0,5" />

        <!-- Send PW Recovery Button -->
        <Button Text="SEND PASSWORD RECOVERY"
            BackgroundColor="DarkBlue"
            TextColor="White"
            CornerRadius="5"
            FontAttributes="Bold"
            Margin="0,10"
            HeightRequest="45"/>

        <!-- Help & Privacy -->
        <Grid ColumnDefinitions="*,Auto" Padding="0,5">
            <Label Text="Help Center"
               HorizontalOptions="Start"
               FontSize="14"
               TextColor="DarkBlue">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnHelpCenterTapped"/>
                </Label.GestureRecognizers>
            </Label>
            <Label Text="Privacy Notice"
               HorizontalOptions="End"
               FontSize="14"
               TextColor="DarkBlue">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnPrivacyTapped"/>
                </Label.GestureRecognizers>
            </Label>
        </Grid>

        <!-- Footer -->
        <VerticalStackLayout Spacing="10" Margin="0,40,0,0">

            <!-- Social Icons -->
            <StackLayout Orientation="Horizontal"
                     HorizontalOptions="Center"
                     Spacing="15"
                     Margin="0,10">

                <!-- Facebook -->
                <Image Source="facebook.png" WidthRequest="40" HeightRequest="40">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding OpenFacebookCommand}" />
                    </Image.GestureRecognizers>
                </Image>

                <!-- Twitter -->
                <Image Source="twitter.png" WidthRequest="40" HeightRequest="40">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding OpenTwitterCommand}" />
                    </Image.GestureRecognizers>
                </Image>

                <!-- LinkedIn -->
                <Image Source="linkedin.png" WidthRequest="40" HeightRequest="40">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding OpenLinkedInCommand}" />
                    </Image.GestureRecognizers>
                </Image>

                <!-- Instagram -->
                <Image Source="ig.png" WidthRequest="40" HeightRequest="40">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding OpenInstagramCommand}" />
                    </Image.GestureRecognizers>
                </Image>

                <!-- Website -->
                <Image Source="globle.png" WidthRequest="40" HeightRequest="40">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding OpenWebsiteCommand}" />
                    </Image.GestureRecognizers>
                </Image>
            </StackLayout>
        </VerticalStackLayout>

    </VerticalStackLayout>
</ContentPage>
