<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MaUiApp_Learning"
             x:Class="MaUiApp_Learning.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Define the color resource -->
            <Color x:Key="AppBaseThemColor">#800080</Color>
            <!-- Global style for ContentPage -->
            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="{StaticResource AppBaseThemColor}" />
                <Setter Property="BarTextColor" Value="White" />
            </Style>

            <!-- Global ContentPage Background (optional) -->
            <Style TargetType="ContentPage">
                <Setter Property="BackgroundColor" Value="#800080" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
